{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dst",
        "removeComments": false,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
